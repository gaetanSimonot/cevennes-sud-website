{
  "manifest_version": 3,
  "name": "Cévennes Connect - Facebook Event Importer",
  "version": "1.0.0",
  "description": "Extrait automatiquement les événements Facebook pour Cévennes Connect",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "http://localhost:*/*",
    "https://cevennes-sud-website.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/events/*",
        "https://facebook.com/events/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
